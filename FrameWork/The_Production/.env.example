#--------------------------------------------------------------------
# THE BOOK OF YOUR DESTINY - Environment Configuration
#
# Copy this file to .env and configure for your environment
# This is the main configuration file for the application
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
# development, testing, production
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP - Base Settings
#--------------------------------------------------------------------
# Base URL for the application
app.baseURL = 'http://localhost:8080/'

# Index file (leave empty for clean URLs)
app.indexPage = ''

# URI Protocol (REQUEST_URI, QUERY_STRING, PATH_INFO)
app.uriProtocol = 'REQUEST_URI'

# Enforce global secure requests (HTTPS)
app.forceGlobalSecureRequests = false

# Default locale for the application
app.defaultLocale = 'en'

#--------------------------------------------------------------------
# DATABASE - Default Connection
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = the_book_of_your_destiny
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------
# Handler: dummy, file, memcached, redis
cache.handler = file
cache.prefix = book_destiny_

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
# session handler (database, files, cookie)
session.driver = cookie
session.cookieName = CODESESSID
session.expiration = 7200
session.savePath = writable/session
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
# CSRF Token
security.tokenName = 'csrf_test_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true
security.redirect = true
security.samesite = 'Lax'

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
# Encryption key (leave empty to generate one)
# Generate with: php spark key:generate
encryption.key = 
encryption.driver = OpenSSL

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY
#--------------------------------------------------------------------
contentsecuritypolicy.reportOnly = false
contentsecuritypolicy.defaultRestrictDefault = false
contentsecuritypolicy.upgradeInsecureRequests = false

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
log.threshold = 4
log.allowedActions = 
log.logDeprecations = true

#--------------------------------------------------------------------
# EMAIL (Optional)
#--------------------------------------------------------------------
# email.driver = SMTP
# email.fromEmail = noreply@example.com
# email.fromName = The Book Of Your Destiny
# email.host = smtp.mailtrap.io
# email.port = 465
# email.username = 
# email.password = 

#--------------------------------------------------------------------
# TINYMCE - Editor Configuration (Optional)
#--------------------------------------------------------------------
tinymce.apiKey = your_tinymce_api_key_here
tinymce.enableCloud = false

#--------------------------------------------------------------------
# FILE UPLOADS
#--------------------------------------------------------------------
upload.maxSize = 52428800
upload.allowedExtensions = jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,mp3,mp4,mov
upload.storagePath = writable/uploads/

#--------------------------------------------------------------------
# BOOK CONFIGURATION
#--------------------------------------------------------------------
# Default book settings
book.pageSize = A5
book.defaultTheme = light
book.minPasswordLength = 8
