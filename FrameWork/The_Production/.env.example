# .env for CodeIgniter 4
# This file is for EXAMPLE PURPOSES ONLY
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME = "CodeIgniter 4"
APP_ENVIRONMENT = development
APP_DEBUG = true
APP_BASEURL = http://localhost/CodeIgniter/

# Database Configuration
DB_DRIVER = MySQLi
DB_HOST = localhost
DB_USER = root
DB_PASS =
DB_NAME = codeigniter4
DB_PORT = 3306
DB_CHARSET = utf8mb4
DB_DBDriver = MySQLi

# Cache Configuration
CACHE_DRIVER = file
CACHE_BACKUP = file

# Session Configuration
SESSION_DRIVER = files
SESSION_DURATION = 3600
SESSION_MATCH_IP = false
SESSION_MATCH_USERAGENT = true
SESSION_REGENERATE_DESTROY = false

# Encryption Key - LEAVE BLANK AND RUN: php spark key:generate
ENCRYPTION_KEY =

# Logger Configuration
LOGGER_LEVEL = 4

# CDN Configuration
CDN_ENABLED = false
CDN_URL =
CDN_ASSET_VERSION =

# Security Headers
FORCE_HTTPS = false
SSL_REDIRECT = 301
HSTS_MAX_AGE = 31536000

# CORS Configuration
CORS_ENABLED = false
CORS_ALLOWED_DOMAINS =

# Content Security Policy
CSP_ENABLED = false
