{
    "name": "codeigniter/codeigniter4",
    "description": "CodeIgniter 4 Application Starter",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "ext-curl": "PHP cURL extension for remote HTTP requests",
        "ext-intl": "PHP Internationalization extension for working with locales",
        "ext-mbstring": "PHP Multibyte String extension for string operations"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
