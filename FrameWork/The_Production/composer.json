{
    "name": "thebestbook/the-book-of-your-destiny",
    "description": "PHP E-Book Store FrameWork - The Book Of Your Destiny - Portable and Scalable",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "ImProVision Man",
            "email": "info@thebestbook.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4.4",
        "phpoffice/phpword": "^1.0",
        "tinymce/tinymce": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mikey179/vfsstream": "^1.6",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config",
            "Tests\\": "tests"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php spark migrate"
        ],
        "post-update-cmd": [
            "@php spark migrate"
        ],
        "test": "phpunit",
        "lint": "parallel-lint --exclude=vendor .",
        "serve": "php spark serve",
        "migrate": "php spark migrate",
        "seed": "php spark db:seed"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}